<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.queue_me">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Queue_Me">

        <!-- Splash Screen - LAUNCHER -->
        <activity android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Register Activity -->
        <activity android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Doctor List Activity -->
        <activity android:name=".DoctorListActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Doctor Details Activity -->
        <activity android:name=".DoctorDetailsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- QR Scanner Activity (if created) -->
        <!-- <activity android:name=".QRScannerActivity" /> -->

        <!-- Queue Status Activity (if created) -->
        <!-- <activity android:name=".QueueStatusActivity" /> -->

    </application>

</manifest>